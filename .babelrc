{
  "presets": ["react", "es2015"],
  "env": {
    "development": {
        "plugins": [
            ["syntax-dynamic-import"],
            ["react-transform", {
               "transforms": [{
                 "transform": "react-transform-hmr",

                 "imports": ["react"],

                 "locals": ["module"]
               }]
            }]
       ]
    }
  }
}
